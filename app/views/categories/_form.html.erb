<div class="row">
  <div class="col-sm-6">
    <%= form_for @category do |form| %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <%= form.submit "Submit", class: "btn btn-primary mt-2" %>
    <% end %>
  </div>
</div>

